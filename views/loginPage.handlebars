<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form id="login-form" class="form">
      <div class="input-field">
        <input class="form-input" type="text" id="user-login" required />
        <label for="user-login">username or email:</label>
      </div>
      <div class="input-field">
        <input
          class="form-input"
          type="password"
          id="password-login"
          required
        />
        <label for="password-login">password:</label>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form id="signup-form" class="form">
      <div class="input-field">
        <input class="form-input" type="text" id="username-signup" required />
        <label for="username-signup">username:</label>
      </div>
      <div class="input-field">
        <input class="form-input" type="text" id="email-signup" required />
        <label for="email-signup">email:</label>
      </div>
      <div class="row">
        <div class="input-field col s5">
          <input
            class="form-input"
            type="password"
            id="password-signup"
            required
          />
          <label for="password-signup">password:</label>
        </div>
        <div class="input-field col s5">
          <input
            class="form-input"
            type="password"
            id="password-confirm"
            required
          />
          <label for="password-confirm">confirm password:</label>
        </div>
        <div class="form-group col s2">
          <button class="btn btn-primary" type="submit">signup</button>
        </div>
      </div>
    </form>
  </div>
</div>
