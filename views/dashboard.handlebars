    
    <div id="temp-spacer"></div>
    
    <div id="dash-container" data-user='{{usedId}}' class="container">
        <h2>Hello {{user.username}}</h2>

        <div class="row">
            {{!-- column for chat and community board --}}
            <div class="col s6">
                <div class="row">
                    <div class="placeholder">
                        <h4>Our Community:</h4>
    
                    
                        {{#each posts as |post|}}
                        {{> community}}
                        {{/each}}

                        
                       
                   
                    </div>
 

                    </br>
                    </br>
                    </br>
                    </br>
                    </br>
                    </br>
                    </br>
                    </br>

                    {{> chat username=user.username}}


                </div>
            </div>

            {{!-- column for mood and activity stuff --}}
            <div class="col s6">
                <div>
                    <h3>What yo mood!?</h3>
                    <div>
                        {{> mood moods=moods}}
                    </div>
                </div>
                <div>
                    <h3>Suggested Activity</h3>
                <div id="suggested-activity">
                    <button id="get-activity" class="waves-effect waves-light btn">Get Activity</button>
                </div>


                    <button id="add-activity" class="waves-effect waves-light btn" onclick="document.location.assign('/addActivity')">Add New Activity</button>

                </div>
            </div>
        </div>
    </div>

    <script src="/js/getActivity.js"></script>
    


